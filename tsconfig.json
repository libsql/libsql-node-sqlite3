{
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "commonjs",
        "lib": ["esnext"],
        "target": "esnext",
        "esModuleInterop": true,
        "isolatedModules": true,
        "allowJs": true,

        "strict": true,
        "incremental": true,

        "rootDir": "src/",
        "outDir": "./lib/",
        "declaration": false
    },
    "include": ["src/"],
    "exclude": ["**/__tests__"]
}
